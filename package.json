{
  "name": "alx-folder-note",
  "version": "0.9.1",
  "description": "Add description, summary and more info to folders with folder notes.",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env BUILD=dev node esbuild.js",
    "build": "cross-env BUILD=production node esbuild.js",
    "prettier": "prettier --write 'src/**/*.+(ts|tsx|json|html|css)'",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "release": "release-it"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@release-it/bumper": "^3.0.1",
    "@release-it/conventional-changelog": "^3.0.1",
    "@tippyjs/react": "^4.2.5",
    "@types/array.prototype.flat": "^1.2.1",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^16.4.7",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "antd": "^4.16.9",
    "array.prototype.flat": "^1.2.4",
    "assert-never": "^1.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.17",
    "esbuild-plugin-less": "^1.0.7",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^36.0.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fast-deep-equal": "^3.1.3",
    "immutable": "^4.0.0-rc.14",
    "json": "^11.0.0",
    "minimatch": "^3.0.4",
    "monkey-around": "^2.2.0",
    "obsidian": "^0.12.11",
    "path-browserify": "^1.0.1",
    "prettier": "^2.3.2",
    "pretty-bytes": "^5.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "regex-parser": "^2.2.11",
    "release-it": "^14.10.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "browser": {
    "path": "path-browserify"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run prettier",
        "npm run eslint"
      ],
      "after:bump": [
        "json -I -f manifest.json -e \"this.version='${version}'\"",
        "json -I -f versions.json -e \"this['${version}']='$(cat manifest.json | json minAppVersion)'\"",
        "sed -i '' \"s/available for Obsidian v.*$/available for Obsidian v$(cat manifest.json | json minAppVersion)+./\" README.md",
        "git add .",
        "npm run build"
      ],
      "after:git:release": "echo After git push, before github release",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${version}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "assets": [
        "build/main.js",
        "build/manifest.json",
        "build/styles.css"
      ],
      "proxy": "http://127.0.0.1:7890",
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": "manifest.json"
      },
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
